{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "strict": true,
    "target": "es2015",
    "module": "esnext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "useDefineForClassFields": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./src/*"],
      "@yupao/yp-family-uni-design/*": ["./src/packages/*"]
    },
    "types": ["@dcloudio/types", "vite/client", "@types/node", "vitest/globals", "jest", "node"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "exclude": ["node_modules"]
}
